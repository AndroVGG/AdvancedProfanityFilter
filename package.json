{
  "name": "advancedprofanityfilter",
  "version": "1.1.3",
  "description": "A browser extension to filter profanity from webpages.",
  "main": "filter.js",
  "scripts": {
    "build": "npm run clean && npm run copy-static && node ./tools/prebuild.js && tsc",
    "build-no-verify": "node ./tools/prebuild.js && tsc",
    "clean": "node ./tools/clean-dist.js",
    "copy-static": "node ./tools/copy-static.js",
    "debug-test": "node --inspect-brk node_modules/mocha/bin/_mocha --reporter tap",
    "lint": "npx eslint ./src/*.ts",
    "package": "npm run lint && npm run build && npm test && node ./tools/package-extension.js",
    "package-no-build": "node ./tools/package-extension.js",
    "test-no-coverage": "npx mocha",
    "test": "npx nyc --reporter=lcov --reporter=text npx mocha",
    "watch": "node tools/watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardfrost/AdvancedProfanityFilter.git"
  },
  "keywords": [
    "Profanity",
    "Filter"
  ],
  "author": "Richard Frost",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/richardfrost/AdvancedProfanityFilter/issues"
  },
  "homepage": "https://github.com/richardfrost/AdvancedProfanityFilter#readme",
  "devDependencies": {
    "@types/chrome": "latest",
    "adm-zip": "^0.4.11",
    "babel-core": "latest",
    "babel-preset-env": "latest",
    "babel-require": "latest",
    "chai": "latest",
    "chokidar": "^2.0.4",
    "eslint": "^5.2.0",
    "eslint-plugin-typescript": "^0.12.0",
    "fs-extra": "^7.0.0",
    "mocha": "latest",
    "nyc": "latest",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
