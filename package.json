{
  "name": "advancedprofanityfilter",
  "version": "1.2.2",
  "description": "A browser extension to filter profanity from webpages.",
  "main": "filter.js",
  "scripts": {
    "build:js-sm": "babel src --out-dir built --extensions \".ts,.tsx\" --source-maps inline",
    "build:test": "npx babel src --out-dir built --extensions \".ts,.tsx\"",
    "build": "npm run type-check && npm run build:test",
    "clean": "node bin/clean.js",
    "copy-static": "node bin/copy-static.js",
    "lint": "npx eslint src/**/*.ts",
    "package:extension": "node bin/package-extension.js",
    "package:webpack": "npx webpack",
    "package": "npm run package:webpack && npm run copy-static && npm run package:extension",
    "test": "npx nyc --reporter=lcov --reporter=text node_modules/mocha/bin/_mocha",
    "test:build": "npx babel src --out-dir ./test/built --extensions \".ts,.tsx\"",
    "test:debug": "node --inspect-brk node_modules/mocha/bin/_mocha --reporter tap",
    "test:nocov": "node_modules/mocha/bin/_mocha",
    "type-check:watch": "npm run type-check -- --watch",
    "type-check": "tsc --noEmit",
    "update-help": "node bin/update-help.js",
    "verify": "npm run lint && npm run build:test && npm run test",
    "watch": "node bin/watch.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardfrost/AdvancedProfanityFilter.git"
  },
  "keywords": [
    "Profanity",
    "Filter"
  ],
  "author": "Richard Frost",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/richardfrost/AdvancedProfanityFilter/issues"
  },
  "homepage": "https://github.com/richardfrost/AdvancedProfanityFilter#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/chrome": "latest",
    "adm-zip": "^0.4.11",
    "babel-loader": "^8.0.4",
    "chai": "latest",
    "chokidar": "^2.0.4",
    "download": "^7.1.0",
    "eslint": "^5.2.0",
    "eslint-plugin-typescript": "^0.14.0",
    "fs-extra": "^7.0.0",
    "marked": "^0.5.1",
    "mocha": "latest",
    "nyc": "latest",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^18.0.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2"
  }
}
