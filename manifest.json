{
  "name": "Advanced Profanity Filter",
  "short_name": "Profanity Filter",
  "author": "phr0styr",
  "manifest_version": 2,
  "version": "0.9.2",
  "description": "An advanced profanity filter.",
  "icons": { "128": "icon.png" },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "38": "icon_small.png"
    },
    "default_title": "Advanced Profanity Filter"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["filter.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}