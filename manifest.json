{
  "name": "Advanced Profanity Filter",
  "short_name": "Profanity Filter",
  "author": "phr0styr",
  "manifest_version": 2,
  "version": "0.9.0",
  "description": "An advanced profanity filter.",
  "icons": { "128": "icon.png" },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["filter.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}